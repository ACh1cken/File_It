<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".auth.ForgotPasswordActivity">

    <EditText
        android:id="@+id/forgot_email_ed"
        android:layout_width="225dp"
        android:layout_height="51dp"
        android:layout_marginTop="240dp"
        android:ems="10"
        android:hint="@string/e_mail_hint"
        android:inputType="textEmailAddress"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/submitForgotButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        android:hint="Submit"
        android:textColorHint="@color/white"
        app:layout_constraintEnd_toStartOf="@+id/backForgotButton"
        app:layout_constraintStart_toStartOf="@+id/forgot_email_ed"
        app:layout_constraintTop_toBottomOf="@+id/forgot_email_ed" />

    <Button
        android:id="@+id/backForgotButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:hint="Back"
        android:textColorHint="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/forgot_email_ed"
        app:layout_constraintStart_toEndOf="@+id/submitForgotButton"
        app:layout_constraintTop_toBottomOf="@+id/forgot_email_ed" />

</androidx.constraintlayout.widget.ConstraintLayout>